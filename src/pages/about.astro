---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import thinkingImg from '../assets/headshots/thinking.jpg';

import cooperImage from '../assets/headshots/cooper.png'
import nickImage from '../assets/headshots/nwsutton.jpg'
import titusImg from '../assets/headshots/ktitus.jpg'
import gawedaImg from '../assets/headshots/agaweda.jpg'
import { nullable } from 'astro:schema';

const executiveBoard = [
    {
        name: "Cooper Sizemore",
        title: "President",
        gradYear: "2027",
        major: "B.S. Computer Science",
        minor: null,
        favLanguages: ["Lang", "Lang", "Lang"],
        image: cooperImage,
        website: "https://github.com/coopersizemore" 
    },
    {
        name: "Kerneep Sandhu",
        title: "Vice President",
        gradYear: "2026",
        major: "B.S. Computer Science",
        minor: null,
        favLanguages: ["Lang", "Lang"],
        image: thinkingImg,
        website: "https://www.linkedin.com/in/kerneep-s/"
    },
    {
        name: "Cole Hincken",
        title: "Secretary",
        gradYear: "2027",
        major: "B.S. Computer Science",
        minor: null,
        favLanguages: ["Lang", "Lang"],
        image: thinkingImg,
        website: "https://www.linkedin.com/in/cole-hincken/"
    },
    {
        name: "Nidhi Grover",
        title: "Treasurer",
        gradYear: "2027",
        major: "B.S. Computer Science",
        minor: "Statistics",
        favLanguages: ["Lang", "Lang"],
        image: thinkingImg,
        website: "https://www.linkedin.com/in/nidhi-grover2026/"
    },
    {
        name: "Nora Cam",
        title: "Event Coordinator",
        gradYear: "2027",
        major: "B.S. Computer Science | Minor in Global Leadership & Team Decision-Making, Music Studies",
        minor: "Global Leadership & Team Decision-Making, Music Studies",
        favLanguages: ["Lang", "Lang"],
        image: thinkingImg,
        website: "https://www.linkedin.com/in/noranhc/"
    },
    {
        name: "John Nguyen",
        title: "Head of Advertising",
        gradYear: "2026",
        major: "B.S. Computer Science",
        minor: null,
        favLanguages: ["Lang", "Lang"],
        image: thinkingImg,
        website: null
    },
    {
        name: "Nicholas Sutton",
        title: "Webmaster",
        gradYear: "2027",
        major: "B.S. Computer Science | Minor in Mathematics",
        minor: null,
        favLanguages: ["Rust", "Julia", "C"],
        image: nickImage,
        website: "https://nick-sutton.github.io/"
    },
];

const facultyAdvisors = [
    {
        name: "Dr. Kimberly Titus",
        title: "Associate Teaching Professor",
        department: "Department of Computer Science",
        favLanguages: ["Lang", "Lang", "Lang"],
        image: titusImg,
        website: "https://csc.ncsu.edu/people/kjtitus3/" 
    },
    {
        name: "Dr. Adam Gaweda",
        title: "Assistant Teaching Professor",
        department: "Department of Computer Science",
        favLanguages: ["Lang", "Lang"],
        image: gawedaImg,
        website: "https://csc.ncsu.edu/people/agaweda/"
    },
